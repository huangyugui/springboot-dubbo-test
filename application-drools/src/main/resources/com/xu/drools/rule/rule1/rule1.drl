package com.xu.drools;
import com.xu.drools.bean.Person;
rule "2"
    no-loop true
	when
        $p : Person(age > 30);
    then
		System.out.println("hello, young xu2!");
		$p.setAge(51);
		update($p);
end

rule "3"
    lock-on-active true
	when
        $p : Person(age > 30);
    then
		System.out.println("hello, young xu2!  ---------");
end


query "people2"
    person : Person( age > 30 )
end